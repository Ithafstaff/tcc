      "id": "id_header"
      },
      {
      "type": "text",
      "label": "Desc",
      "id": "id_desc-txt"
      },
      {
        "type": "image_picker",
        "label": "Image 1",
        "id": "id_img1"
      },
      {
        "type": "image_picker",
        "label": "Image 2",
        "id": "id_img2"
      },
      {
        "type": "image_picker",
        "label": "Image 3",
        "id": "id_img3"
      },
      {
        "type": "checkbox",
        "label": "Horizontal Line",
        "id": "hr-line",
        "default": true,
      }
      
    ],
    "blocks": [
    ],
    "presets": [
      {
        "name": "Get In Touch"
      }
    ]
  }
