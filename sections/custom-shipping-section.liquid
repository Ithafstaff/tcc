<div class="custom-shipping__container x:w-full x:bg-[#222222] x:text-white x:flex x:items-center x:justify-center x:px-6">
  <!-- Container to Center the Content -->
  <div class="custom-shipping__wrap">
    <!-- Left Text Section -->
    <div class="x:flex x:flex-col x:justify-center">
      <h2 class="custom-shipping__heading x:text-white x:font-normal">
        {{ section.settings.heading | default: 'FREE SHIPPING ON ORDERS OVER $200' }}
      </h2>
      <p class="custom-shipping__desc x:text-white">
        {{ section.settings.subheading | default: 'Get alerts about new items, sales, and more.' }}
      </p>
    </div>

    <!-- Button Section (Only If Text is Present) -->
    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_url | default: '#' }}"
        class="x:bg-white x:text-black x:px-6 x:py-2 x:text-sm x:font-semibold x:hover:bg-[#222222] x:hover:border-white x:hover:border x:hover:text-white x:shrink-0"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Custom Shipping Section",
  "class": "shopify-section--custom-shipping",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FREE SHIPPING ON ORDERS OVER $200"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get alerts about new items, sales, and more."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "GET STARTED"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Custom Shipping Section"
    }
  ]
}
{% endschema %}
