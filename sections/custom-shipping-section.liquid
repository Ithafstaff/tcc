<div class="x:w-full x:h-[112px] x:bg-black x:p-6 x:flex x:justify-between x:items-center">
    <!-- Left Text Section -->
    <div>
      <h2 class="x:text-white x:text-lg x:font-bold">
        {{ section.settings.heading | default: 'FREE SHIPPING ON ORDERS OVER $200' }}
      </h2>
      <p class="x:text-gray-400 x:text-sm">
        {{ section.settings.subheading | default: 'Get alerts about new items, sales, and more.' }}
      </p>
    </div>
  
    <!-- Button Section -->
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url | default: '#' }}"
         class="x:bg-white x:text-black x:px-6 x:py-2 x:text-sm x:font-semibold x:rounded-md hover:x:bg-gray-200">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
  
  {% schema %}
  {
    "name": "Custom Shipping Section",
    "class": "shopify-section--custom-shipping",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "FREE SHIPPING ON ORDERS OVER $200"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Get alerts about new items, sales, and more."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "GET STARTED"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ],
    "presets": [
      {
        "name": "Custom Shipping Section"
      }
    ]
  }
  {% endschema %}