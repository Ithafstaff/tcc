<div class="custom-luxury__container x:w-full x:bg-[#222222] x:text-white x:flex x:flex-col x:justify-center x:items-center x:gap-4">
    <!-- Heading Section -->

    {% if section.settings.heading != blank %}
      <p style="font-family: 'GFSDidot', serif; font-size: 32px;" class="custom__heading-title x:tracking-wide x:pt-[5px]">
        {{ section.settings.heading }}
      </p>
    {% endif %}
  
    <!-- Subheading Section -->
    <p class="custom-luxury__text">
      {{ section.settings.subheading | default: 'Timeless pieces for meaningful moments' }}
    </p>
  
    <!-- Button Section -->
    {% assign button_count = section.blocks.size %}
    <div class="custom-luxury__btn-wrap x:flex x:gap-6 {% if button_count == 1 %}x:justify-center{% endif %}">
      {% for block in section.blocks %}
        <a href="{{ block.settings.url | default: '#' }}" 
           style="font-family: 'Alata', sans-serif;"
           class="x:border x:border-white x:text-white x:tracking-wider x:flex x:items-center x:justify-center x:hover:bg-white x:hover:text-black x:transition custom__btn-width">
          {{ block.settings.text | default: 'Button' }}
        </a>
      {% endfor %}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "Luxury Banner",
    "class": "shopify-section--luxury-banner",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "LUXURY. ELEGANCE. STYLE."
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Timeless pieces for meaningful moments"
      }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Button Text",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Luxury Banner",
        "blocks": [
          {
            "type": "button",
            "settings": {
              "text": "Shop New",
              "url": "#"
            }
          },
          {
            "type": "button",
            "settings": {
              "text": "Shop Best Sellers",
              "url": "#"
            }
          }
        ]
      }
    ]
  }
  {% endschema %}