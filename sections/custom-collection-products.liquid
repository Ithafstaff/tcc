LIQUID
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

<!-- CSS to Hide Scrollbar -->
<style>
  #scroll-area-{{ section.id }} {
    -ms-overflow-style: none; /* Hide scrollbar for Internet Explorer and Edge */
    scrollbar-width: none; /* Hide scrollbar for Firefox */
  }

  #scroll-area-{{ section.id }}::-webkit-scrollbar {
    display: none; /* Hide scrollbar for Chrome, Safari, and Opera */
  }
</style>

<div {% render 'section-properties' %} style="--section-spacing-block: 10px;" class="x:w-full x:h-[635px] x:bg-white x:p-6 x:pt-[40px]">
  <!-- Header Section -->   
  
  {%- if section.settings.title != blank -%}
    <div class="x:flex x:items-center x:justify-between">
    <!-- Centered Header -->
      <h1 class="x:text-3xl x:font-bold x:text-center x:flex-grow">
        {{ section.settings.title }}
      </h1>
    </div>
   {%- endif -%}
   
  <!-- Product List Section (Limited to 3 Products) -->
<div>
  <div class="custom-collection__container" id="scroll-area-{{ section.id }}">
    {%- assign product_count = 0 -%}

    {%- for block in section.blocks -%}
      {%- if product_count < 4 -%}
        {%- assign collection_handle = block.settings.collection -%}
        {%- assign collection = all_collections[collection_handle] -%}
        {%- assign first_product = collection.products.first -%}

        <!-- Product Card -->
        <a class="custom-collection__slide-continer"
           href="{{ collection.url }}"
           style="scroll-snap-align: start; flex-shrink: 0; overflow: hidden; border-radius: 0.375rem; display: block; text-decoration: none;">
          <div class="custom-collection__slide-item"
               style="width: 100%; display: flex; align-items: center; justify-content: center; background-color: #d1d5db; position: relative;">
            <div style="position: absolute; bottom: 0; left: 0; width: 100%; height: 48px; background-color: black; opacity: 0; pointer-events: none; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease;">
              <span style="text-transform: uppercase; color: white;">view product</span>
            </div>

            {%- if collection.featured_image != blank -%}
              <img src="{{ collection.featured_image | image_url: width: 800 }}"
                   alt="{{ collection.title }}"
                   style="width: 100%; height: 100%; object-fit: cover;"
                   loading="lazy">
            {%- elsif first_product != blank and first_product.images.size > 0 -%}
              <img src="{{ first_product.images.first | img_url: 'large' }}"
                   alt="{{ first_product.title }}"
                   style="width: 100%; height: 100%; object-fit: cover;"
                   loading="lazy">
            {%- else -%}
              <img src="{{ 'placeholder.jpg' | asset_url }}"
                   alt="No image available"
                   style="width: 100%; height: 100%; object-fit: cover;"
                   loading="lazy">
            {%- endif -%}
          </div>

          <p class="custom-collection__box-text">{{ collection.title }}</p>
        </a>

        {%- assign product_count = product_count | plus: 1 -%}
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>


</div>

{% schema %}
{
  "name": "Custom Collection Product",
  "class": "shopify-section--collection-products",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    }
  ],
  "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
          }
        ]
      }
  ],
"presets": [
  {
    "name": "Custom Collection Product",
    "blocks": [
      {
        "type": "collection"
      },
      {
        "type": "collection"
      },
      {
        "type": "collection"
      }
    ]
  }
]

}
{% endschema %}