<style>

.image-col-txt__container {
  max-width: 1356px;
  width: 100%;
  margin: 0 auto;
  padding: 70px 90px 50px;
}
.image-col-txt__container--border-true {
  border-top: 1px solid rgba(0, 0, 0, 0.2);
}
.image-col-txt__container--border-false {
  border-top: none;
}

.image-col-txt__image-wrap {
    display: flex;
    gap: 32px;
    justify-content: center;
}

.image-col-txt__image-box {
  height: 155px;
}

.image-col-txt__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-col-txt__desc-heading {
  font-family: "Alata", sans-serif !important;
  font-size: 24px;
  font-weight: 400;
  text-align: center;
  line-height: normal !important;
  letter-spacing: 1px;
  text-transform: uppercase;
  margin: 42px auto 16px;
}
  
.image-col-txt__desc-txt {
  font-family: "Poppins", sans-serif !important;
  font-size: 14px;
  font-weight: 400;
  text-align: center;
  line-height: 20px;
  letter-spacing: 1px;
  text-transform: uppercase;
  margin: 42px auto 16px;
}
  
  
@media screen and (max-width: 767px) {
  .image-col-txt__container {
    padding: 23px 19px;
  }

  .image-col-txt__image-wrap {
    gap: calc(var(--x-spacing) * 2);
  }
}

</style>



<div class="image-col-txt__container image-col-txt__container--border-{{ section.settings.hr-line }}">
  <div class="image-col-txt__image-wrap">

    {% if section.settings.id_img1 %}
      <div class="image-col-txt__image-box">
        <img class="image-col-txt__image" src="{{ section.settings.id_img1 | img_url: 'master' }}">
      </div>
    {% endif %}
    {% if section.settings.id_img2 %}
      <div class="image-col-txt__image-box">
        <img class="image-col-txt__image" src="{{ section.settings.id_img2 | img_url: 'master' }}">
      </div>
    {% endif %}
    {% if section.settings.id_img3 %}
      <div class="image-col-txt__image-box">
        <img class="image-col-txt__image" src="{{ section.settings.id_img3 | img_url: 'master' }}">
      </div>
    {% endif %}
    
  </div>
  
  <div class="image-col-txt__desc-wrap">
    {% if section.settings.id_header %}
      <h2 class="image-col-txt__desc-heading">{{ section.settings.id_header }}</h2>
    {% endif %}
    {% if section.settings.id_desc-txt %}
      <p class="image-col-txt__desc-txt">{{ section.settings.id_desc-txt }}</p>
    {% endif %}
  </div>
</div>



{% schema %}
  {
    "name": "Image Column with Txt",
    "settings": [

      {
      "type": "text",
      "label": "Header",
      "id": "id_header"
      },
      {
      "type": "text",
      "label": "Desc",
      "id": "id_desc-txt"
      },
      {
        "type": "image_picker",
        "label": "Image 1",
        "id": "id_img1"
      },
      {
        "type": "image_picker",
        "label": "Image 2",
        "id": "id_img2"
      },
      {
        "type": "image_picker",
        "label": "Image 3",
        "id": "id_img3"
      },
      {
        "type": "checkbox",
        "label": "Horizontal Line",
        "id": "hr-line",
        "default": true,
      }
      
    ],
    "blocks": [
    ],
    "presets": [
      {
        "name": "Image Column with Txt"
      }
    ]
  }
{% endschema %}