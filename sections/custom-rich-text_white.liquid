<div class="custom-collection__info-wrap x:w-full x:text-black x:flex x:flex-col x:justify-center x:items-center x:gap-4">
  <!-- Heading Section -->
  <p class="custom-collection__info-heading x:tracking-wide">
    {{ section.settings.heading | default: 'LUXURY. ELEGANCE. STYLE.' }}
  </p>

  <!-- Subheading Section -->
  <p class="custom-collection__info-txt  x:text-black">
    {{ section.settings.subheading | default: 'Timeless pieces for meaningful moments' }}
  </p>

  <!-- Button Section -->
  {% assign button_count = section.blocks.size %}
  <div class="x:flex x:gap-6 x:pt-[25px] {% if button_count == 1 %}x:justify-center{% endif %}">
    {% for block in section.blocks %}
      <a
        href="{{ block.settings.url | default: '#' }}"
        style="font-family: 'Alata', sans-serif;"
        class="x:border x:border-black x:text-black x:text-lg x:tracking-wider x:flex x:items-center x:justify-center x:hover:bg-[#222222] x:hover:text-white x:transition"
      >
        {{ block.settings.text | default: 'Button' }}
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Luxury Banner white",
  "class": "shopify-section--luxury-banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "LUXURY. ELEGANCE. STYLE."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Timeless pieces for meaningful moments"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Luxury Banner white",
      "blocks": [
        {
          "type": "button",
          "settings": {
            "text": "Shop New",
            "url": "#"
          }
        },
        {
          "type": "button",
          "settings": {
            "text": "Shop Best Sellers",
            "url": "#"
          }
        }
      ]
    }
  ]
}
{% endschema %}
