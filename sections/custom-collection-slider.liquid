<style>
  .custom-col-slider__container {
    max-width: 1381px;
    margin: 50px auto;
  }

  .custom-col-slider__heading {
    font-family: "Alata", sans-serif !important;
    font-size: 32px;
    text-align: center;
    font-weight: 400;
    letter-spacing: 1px;
    color: #222;
  }

  .custom-col-slider__desc {
    font-family: "Alata", sans-serif !important;
    font-size: 20px;
    text-align: center;
    font-weight: 400;
    letter-spacing: 1px;
    color: #000;
  }

  .custom-col-slider__slide-wrap {
    margin: 40px 0;
  }



  

  .custom-col-slider__list {
    display: flex;
    /* gap: 20px; */
  }

  .custom-col-slider__slide {
    width: 200px !important;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .custom-col-slider__img-box {
    height: 200px;
  }

  .custom-col-slider__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .splide__arrow {
    border-radius: 0;
    border: 1px solid #000;
    transform: none;
    top: -72px;
  }
  
  .splide__arrow--next {
    right: 30px
  }
  .splide__arrow--prev {
    left: unset;
    right: 70px;
  }
</style>








