
<section class="custom-col-slider__container splide  js-collection-slider">
  <div class="custom-col-slider__track splide__track">
    <ul class="custom-col-slider__list splide__list">
      <li class="custom-col-slider__slide splide__slide">Slide 01</li>
      <li class="custom-col-slider__slide splide__slide">Slide 02</li>
      <li class="custom-col-slider__slide splide__slide">Slide 03</li>
      <li class="custom-col-slider__slide splide__slide">Slide 04</li>
      <li class="custom-col-slider__slide splide__slide">Slide 05</li>
      <li class="custom-col-slider__slide splide__slide">Slide 06</li>
      <li class="custom-col-slider__slide splide__slide">Slide 07</li>
    </ul>
  </div>
</section>

{% schema %}
  {
    "name": "Custom Collection Slider",
    "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "id_img"
        },
        {
          "type": "text",
          "label": "Header",
          "id": "id_header"
        },
        {
          "type": "richtext",
          "label": "Content",
          "id": "id_content"
        },
        {
        "type": "select",
        "id": "flex_direction",
        "label": "Flex Direction",
        "options": [
          {
            "value": "row",
            "label": "Row"
          },
          {
            "value": "row-reverse",
            "label": "Row Reverse"
          }
        ],
        "default": "row"
      }
    ],
    "blocks": [
      
    ],
    "presets": [
      {
        "name": "Custom Collection Slider"
      }
    ],
    "max_blocks": 4
  }
{% endschema %}