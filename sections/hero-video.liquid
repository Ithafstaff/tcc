<style>
.hero-video-banner {
  position: relative;
  width: 100%;
  overflow: hidden;
  /* display: none; */
  
}

.hero-video-banner__container {
  position: relative;
  height: 820px;
}

.hero-video-banner__video {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.hero-video-banner__overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  text-shadow: 0 0 8px rgba(0,0,0,0.6);
}

.hero-video-banner__overlay h1 {
  font-size: 2.5rem;
  margin: 0;
}

.hero-video-banner__overlay p {
  font-size: 1.2rem;
  margin: 0.5rem 0 0;
}

.custom-hero-drawer__container {
  position: absolute;
  left: 0;
  bottom: 0;
  border: 1px solid red;
  width: 200px;
  contain-intrinsic-block-size: auto 100px;
  display: none;
}
</style>



<section class="hero-video-banner">


  
  
  <div class="hero-video-banner__container">
    {% if section.settings.hero_video != blank %}
  <video 
    class="hero-video-banner__video"
    autoplay
    loop
    muted
    playsinline
  >
    <source src="https://cdn.shopify.com/videos/c/o/v/2046a32ba5f44ac983b82f5a2550f9f5.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
{% endif %}


    <div class="hero-video-banner__overlay">
      <h1>{{ section.settings.headline }}</h1>
      <p>{{ section.settings.subheadline }}</p>
    </div>
  </div>



  <div class="custom-hero-drawer__container">



    {% if section.settings.collection != blank %}
    <span class="custom-hero-drawer__collection-overlay"></span>
    <div class="custom-hero-drawer__collection-wrap" data-col-id="{{ section.settings.collection }}">>
        <div class="custom-hero-drawer__product-container">
          <span class="custom-hero-drawer__collection-close">X</span>
          <h3 class="custom-hero-drawer__heading-txt">
            GET THE LOOK
          </h3>
          <div
            id="product-container-{{ section.id }}"
            class="custom-hero-drawer__product-wrap"
          >
            {% for product in section.settings.collection.products %}
              <div class="x:w-full x:flex x:flex-col custom-hero-drawer__product-item">
                <a href="{{ product.url }}"
                  class="x:w-full x:aspect-square x:bg-cover x:bg-center x:mb-[8px] x:md:mb-[18px] custom-hero-drawer__product-img"
                  style="background-image: url('{{ product.featured_image.src | image_url: width: product.featured_image.width }}')"
                >
                  <button onclick="showCartDrawer()"
                    class="custom-hero-drawer__product-item-btn" 
                    data-variant-id="{{ product.variants.first.id }}" 
                    data-product-title="{{ product.title }}">
                    ADD TO CART
                  </button>

                </a>
                <div class="x:flex x:flex-col x:justify-between x:gap-[8px] x:flex-grow x:items-start">
                  <a href="{{ product.url }}" class="x:space-y-[2px] x:md:space-y-[5px]">
                    <p href="{{ product.url }}" class="x:text-[12px] x:md:text-[14px] x:leading-[16px] x:md:leading-[20px]">
                      {{ product.title }}
                    </p>
                    <p class="x:text-[12px] x:leading-[18px] x:tracking-[-0.21px]">{{ product.price | money }}</p>
                  </a>
                  
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
    </div>
    {% endif %}
    
    
    
  </div>
</section>




{% schema %}
{
  "name": "Hero Video Banner",
  "tag": "section",
  "settings": [
    {
      "type": "video",
      "id": "hero_video",
      "label": "Hero Video"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Your Headline Here"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Your subheadline goes here"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Mute video",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Video Banner"
    }
  ]
}
{% endschema %}
