{% assign type_value = product.metafields.custom.type.value | default: product.metafields.custom.type %}
{% if type_value contains 'Tablecloth' %}

<style>
  .tablecloth-section__container {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    justify-content: center;
    margin-top: 80px;
    background: #e6e4db4d;
  }


  .tablecloth-section__img-banner {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .tablecloth-section__wrap {
    display: flex;
    flex-direction: column;
    padding: 80px 120px;
    gap: 20px;
  }

  .tablecloth-section__title {
    font-size: calc(18px + (35 - 18) * (100vw - 1024px) / (1920 - 1024));
    text-transform: uppercase;
    font-weight: 500;
  }
  
  .tablecloth-section__desc {
    font-size: calc(14px + (18 - 12) * (100vw - 1024px) / (1920 - 1024));
  }
  
  .tablecloth-section__button {
    font-size: calc(14px + (18 - 12) * (100vw - 1024px) / (1920 - 1024));
    text-transform: uppercase;
    width: fit-content;
    padding: 10px 30px;
    border: 1px solid;
    transition: all 0.2s ease;
  }
  
  .tablecloth-section__button:hover {
    color: #fff;
    background: #000;
  }

  @media screen and (max-width: 1150px) {
    .tablecloth-section__wrap {
      padding: 40px 60px;
    }
  }
  
  @media screen and (max-width: 767px) {
    .tablecloth-section__container {
      grid-template-columns: 1fr;
      margin-top: 50px;
    }

    .tablecloth-section__wrap {
      padding: 20px;
    }

    .tablecloth-section__title {
      font-size: 20px;
    }
    .tablecloth-section__desc {
      font-size: 14px;
    }
    .tablecloth-section__button {
      font-size: 14px;
      margin: 0 auto;
    }
  }

  
</style>



<div class="tablecloth-section__container">
  <img class="tablecloth-section__img-banner" src="https://cdn.shopify.com/s/files/1/0723/0839/2168/files/image_27_1_7af00971-9854-491f-89f1-876c0253b9b4.png?v=1752780038">
  <div class="tablecloth-section__wrap">
    <h2 class="tablecloth-section__title">How to Pick a Tablecloth</h2>
    <p class="tablecloth-section__desc">Choosing the right tablecloth can instantly elevate your dining space. Our expert tips make it easy to find the perfect style, size, and fabric for any setting</p>
    <a class="tablecloth-section__button" href="/pages/how-to-choose-the-right-tablecloth">LEARN MORE</a>
  </div>
</div>


  {% endif %}
  
