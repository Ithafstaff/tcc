<style>
  .main-div {
    display: flex;
    width: 100%;
    height: fit-content;
    background-color: rgba(22,22,22,0.03);
    margin: 16px 21px;
    flex-direction: column;
    align-items: center;
  }

  .profile-details-container {
    display: flex;
    flex-direction: column;
  }

  .profile-name {
    font-family: 'Alata', sans-serif;
    font-size: 14px;
    letter-spacing: 0px;
    font-weight: 400;
  }
</style>

<div class="main-div">
  <div style="width: 100%; height: fit-content; background-color: blue; display: flex; align-items: center; justify-content: center;">
    {% if customer %}
    <img
      src="https://cdn.shopify.com/s/files/1/0723/0839/2168/files/person-img_2.png?v=1745996393"
      alt=""
      width="50px"
      height="50px"
    >
    <div class="profile-details-container">
      <span class="profile-name">{{ customer.first_name }} {{ customer.last_name }}</span>
      <span class="profile-number">{{ customer.phone }}</span>
      <span class="profile-email">{{ customer.email }}</span>
    </div>
    {% endif %}
  </div>
  <div style="width: 50px; height: 100px; background-color: red;">SECOND DIV</div>
</div>
