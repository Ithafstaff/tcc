<style>

  .custom-pickup-delivery {
    font-size: 14px;
    margin: 10px 0;
    display: block
  }

  .custom-pickup-delivery a {
    text-decoration: underline;
  }

  .custom-pickup-delivery__modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #00000075;
    display: flex;
    align-items: center;
    justify-content: center;
    display: none;
    z-index: 2;
  }

  .custom-pickup-delivery__modal-wrap {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 380px;
    height: 300px;
    padding: 30px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
  }

  .custom-pickup-delivery__close {
    border: 1px solid;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 20px;
    position: absolute;
    top: 10px;
    right: 10px;
  }

  .show {
    display: block;
  }

</style>

<span class="custom-pickup-delivery">
  Available for <a href="#" id="pickup-link">Pickup</a> and <a href="#" id="delivery-link">Delivery</a>
</span>

<div class="custom-pickup-delivery__modal-container" id="pickup-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    <button class="custom-pickup-delivery__close">&times;</button>
    Pickup Modal Content
  </div>
</div>
<div class="custom-pickup-delivery__modal-container" id="delivery-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    <button class="custom-pickup-delivery__close">&times;</button>
    Delivery Modal Content
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const pickupModal = document.getElementById('pickup-modal');
  const deliveryModal = document.getElementById('delivery-modal');
  const closeButtons = document.querySelectorAll('.custom-pickup-delivery__close');

  // Use delegation
  document.addEventListener('click', function(event) {
    if (event.target.matches('#pickup-link')) {
      event.preventDefault();
      pickupModal.classList.add('show');
      deliveryModal.classList.remove('show');
    } else if (event.target.matches('#delivery-link')) {
      event.preventDefault();
      deliveryModal.classList.add('show');
      pickupModal.classList.remove('show');
    } else if (
      !event.target.closest('.custom-pickup-delivery__modal-wrap') &&
      !event.target.closest('#pickup-link') &&
      !event.target.closest('#delivery-link')
    ) {
      // Click outside: close both modals
      pickupModal.classList.remove('show');
      deliveryModal.classList.remove('show');
    }
  });

  // Close buttons
  closeButtons.forEach(function(btn) {
    btn.addEventListener('click', function() {
      pickupModal.classList.remove('show');
      deliveryModal.classList.remove('show');
    });
  });
});

</script>
