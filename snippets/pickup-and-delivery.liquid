<style>

  .custom-pickup-delivery {
    font-size: 14px;
    margin: 10px 0;
    display: block
  }

  .custom-pickup-delivery a {
    text-decoration: underline;
  }

  .custom-pickup-delivery__modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #00000075;
    display: flex;
    align-items: center;
    justify-content: center;
    display: none;
    z-index: 2;
  }

  .custom-pickup-delivery__modal-wrap {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 380px;
    height: 300px;
    padding: 30px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
  }

  .custom-pickup-delivery__close {
    border: 1px solid;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 20px;
    position: absolute;
    top: 10px;
    right: 10px;
  }

  .show {
    display: block;
  }

</style>

<span class="custom-pickup-delivery">
  Available for <a href="#" id="pickup-link">Pickup</a> and <a href="#" id="delivery-link">Local Delivery</a>
</span>

<div class="custom-pickup-delivery__modal-container" id="pickup-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    <button class="custom-pickup-delivery__close">&times;</button>
    Pickup Modal Content
  </div>
</div>
<div class="custom-pickup-delivery__modal-container" id="delivery-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    <button class="custom-pickup-delivery__close">&times;</button>
    Delivery Modal Content
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    function addModalListeners() {
      const pickupLink = document.getElementById('pickup-link');
      const deliveryLink = document.getElementById('delivery-link');
      const pickupModal = document.getElementById('pickup-modal');
      const deliveryModal = document.getElementById('delivery-modal');
      const closeButtons = document.querySelectorAll('.custom-pickup-delivery__close');
  
      pickupLink.addEventListener('click', function(event) {
        event.preventDefault();
        pickupModal.classList.add('show');
        deliveryModal.classList.remove('show');
      });
  
      deliveryLink.addEventListener('click', function(event) {
        event.preventDefault();
        deliveryModal.classList.add('show');
        pickupModal.classList.remove('show');
      });
  
      closeButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          pickupModal.classList.remove('show');
          deliveryModal.classList.remove('show');
          // console.log('Close button clicked!');
        });
      });
  
      document.addEventListener('click', function(event) {
        if (
          !event.target.closest('.custom-pickup-delivery__modal-wrap') &&
          !event.target.closest('#pickup-link') &&
          !event.target.closest('#delivery-link')
        ) {
          pickupModal.classList.remove('show');
          deliveryModal.classList.remove('show');
        }
      });
    }
    addModalListeners();
  
    setInterval(addModalListeners, 1000);
  });
</script>

