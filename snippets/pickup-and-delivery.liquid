<style>

  .custom-pickup-delivery {
    font-size: 14px;
    margin: 10px 0;
    display: block
  }

  .custom-pickup-delivery a {
    text-decoration: underline;
  }

  .custom-pickup-delivery__modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #00000075;
    display: flex;
    align-items: center;
    justify-content: center;
    display: none;
    z-index: 2;
  }

  .custom-pickup-delivery__modal-wrap {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 200px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    /* display: none; */
    z-index: 5;
  }

  

  .show {
    display: block;
  }

</style>

<span class="custom-pickup-delivery">
  Available for <a href="#" id="pickup-link">Pickup</a> and <a href="#" id="delivery-link">Delivery</a>
</span>

<div class="custom-pickup-delivery__modal-container" id="pickup-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    Pickup Modal Content
  </div>
</div>
<div class="custom-pickup-delivery__modal-container" id="delivery-modal">
  <div class="custom-pickup-delivery__modal-wrap">
    Delivery Modal Content
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const pickupLink = document.getElementById('pickup-link');
    const deliveryLink = document.getElementById('delivery-link');
    const pickupModal = document.getElementById('pickup-modal');
    const deliveryModal = document.getElementById('delivery-modal');

    pickupLink.addEventListener('click', function(event) {
      event.preventDefault();
      pickupModal.classList.add('show');
      deliveryModal.classList.remove('show');
    });

    deliveryLink.addEventListener('click', function(event) {
      event.preventDefault();
      deliveryModal.classList.add('show');
      pickupModal.classList.remove('show');
    });

    // Close modal when clicking outside of .custom-pickup-delivery__modal-wrap
    document.addEventListener('click', function(event) {
      // Check if the click target is NOT inside any modal content or the pickup/delivery links
      if (
        !event.target.closest('.custom-pickup-delivery__modal-wrap') &&
        !event.target.closest('#pickup-link') &&
        !event.target.closest('#delivery-link')
      ) {
        pickupModal.classList.remove('show');
        deliveryModal.classList.remove('show');
      }
    });
  });
</script>