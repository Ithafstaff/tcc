<style>
  .custom-recently-view__container {
    max-width: 1381px;
    margin: 50px auto;
  }

  .custom-recently-view__heading {
    font-family: "Alata", sans-serif !important;
    font-size: 32px;
    text-align: center;
    font-weight: 400;
    letter-spacing: 1px;
    color: #222;
  }

  .custom-recently-view__desc {
    font-family: "Alata", sans-serif !important;
    font-size: 20px;
    text-align: center;
    font-weight: 400;
    letter-spacing: 1px;
    color: #000;
  }

  .custom-recently-view__slide-wrap {
    margin: 40px 0;
  }



  

  .custom-recently-view__list {
    display: flex;
    /* gap: 20px; */
  }

  .custom-recently-view__slide {
    width: 200px !important;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .custom-recently-view__img-box {
    height: 200px;
  }

  .custom-recently-view__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .splide__arrow {
    border-radius: 0;
    border: 1px solid #000;
    transform: none;
    top: -72px;
  }
  
  .splide__arrow--next {
    right: 30px
  }
  .splide__arrow--prev {
    left: unset;
    right: 70px;
  }
</style>








<div class="custom-recently-view__container">
  <h2 class="custom-recently-view__heading">{{ section.settings.id_header }}</h2>
  <p class="custom-recently-view__desc">{{ section.settings.id_content | strip_html }}</p>
  <div class="custom-recently-view__slide-wrap splide  js-collection-slider">
    <div class="custom-recently-view__track splide__track">

      
      <ul class="custom-recently-view__list splide__list">

        {% for block in section.blocks %}
        <a class="custom-recently-view__slide splide__slide" href="{{ block.settings.id_link | strip_html }}">
          <div class="custom-recently-view__img-box">
            <img class="custom-recently-view__img" src="{{ block.settings.id_img | img_url: 'master' }}" width="100%" height="" loading="lazy"/>
          </div>
          <span class="custom-recently-view__img-label">{{ block.settings.id_img-label | strip_html }}</span>
        </a>
        {% endfor %}
  
      </ul>

      
    </div>
  </div>

</div>