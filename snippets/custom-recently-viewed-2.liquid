  <!-- Recently Viewed Section -->
  <div class="custom-recently-view__container">
    <h2 class="custom-recently-view__heading">Recently Viewed</h2>

    <div class="custom-recently-view__slide-wrap splide js-recently-view">
      <div class="custom-recently-view__track splide__track">
        <ul class="custom-recently-view__list splide__list" id="recently-viewed-list">
          <!-- JS will inject items here -->
        </ul>
      </div>
    </div>
  </div>


  <script>
    // Example: simulate viewing a product (use this only on product pages)
    const viewedProduct = {
      title: "Demo Product",
      image: "https://via.placeholder.com/300x300.png?text=Demo+Product",
      url: window.location.href
    };

    let stored = JSON.parse(localStorage.getItem("recentlyViewed")) || [];

    // Remove duplicates
    stored = stored.filter(p => p.url !== viewedProduct.url);

    // Add to front
    stored.unshift(viewedProduct);

    // Limit to 6
    stored = stored.slice(0, 6);

    // Save back
    localStorage.setItem("recentlyViewed", JSON.stringify(stored));

    // Render in the UI
    const container = document.getElementById("recently-viewed-list");
    container.innerHTML = "";

    stored.forEach(product => {
      const li = document.createElement("li");
      li.className = "custom-recently-view__slide splide__slide";

      li.innerHTML = `
        <a href="${product.url}" class="custom-recently-view__link">
          <div class="custom-recently-view__img-box">
            <img src="${product.image}" alt="${product.title}" class="custom-recently-view__img" loading="lazy">
          </div>
          <span class="custom-recently-view__img-label">${product.title}</span>
        </a>
      `;

      container.appendChild(li);
    });

    // Initialize Splide
    new Splide('.js-recently-view', {
      type: 'slide',
      perPage: 3,
      gap: '1rem',
      breakpoints: {
        768: { perPage: 2 },
        480: { perPage: 1 }
      }
    }).mount();
  </script>