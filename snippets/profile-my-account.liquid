    justify-content: center;
    font-size: 12px;
    font-family: "Alata", sans-serif !important;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  .profile__account-input-note {
    color: rgba(34, 34, 34, 0.5);
    font-size: 11px;
    letter-spacing: 1px;
    font-family: "Poppins", sans-serif !important;
    text-align: center;
  }

.hide {
