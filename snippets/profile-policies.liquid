<script>
  document.addEventListener("DOMContentLoaded", function () {
    const tabs = {
      "pickup-tab": "pickup-section",
      "shipping-tab": "shipping-section",
      "return-tab": "return-section",
      "subscription-tab": "subscription-section",
      "privacy-tab": "privacy-section",
    };
 

    function activateTab(tabId) {
      // Remove active class from all links
      document.querySelectorAll(".profile__order-cat-link").forEach(link =>
        link.classList.remove("profile__order-cat-link--active")
      );

      // Hide all tab sections
      Object.values(tabs).forEach(sectionId =>
        document.getElementById(sectionId).classList.add("hide")
      );



      // Show selected section and highlight tab
      document.getElementById(tabId).classList.add("profile__order-cat-link--active");
      document.getElementById(tabs[tabId]).classList.remove("hide");
    }

    // Initial tab from hash
    const hash = window.location.hash;
 
    if (hash === "#shipping-tab") {
      activateTab("shipping-tab");
    } else if (hash === "#return-tab") {
      activateTab("return-tab");
    } else if (hash === "#subscription-tab") {
      activateTab("subscription-tab");
    } else if (hash === "#privacy-tab") {
      activateTab("privacy-tab");
    } else {
      window.location.hash = "#pickup-tab"; // set default hash
      activateTab("pickup-tab");
    }


    // Handle tab clicks
    Object.keys(tabs).forEach(tabId => {
      document.getElementById(tabId).addEventListener("click", function (e) {
        e.preventDefault();
        window.location.hash = `#${tabId}`; // update the hash
        activateTab(tabId);
      });
    });



    // Show policy accordion content
    const accordionItems = document.querySelectorAll(".profile-policy__privacy-list li");
    accordionItems.forEach((item) => {
      const accordionHeader = item.querySelector(".profile-policy__privacy-item");
      const accordionContent = item.querySelector(".profile-policy__privacy-item-wrap");
    
      if (accordionHeader && accordionContent) {
        accordionHeader.addEventListener("click", () => {
          accordionContent.classList.toggle("show");
        });
      }
    });

      
    // For Mobile dropdown option
    const dropdown = document.getElementById('tab-category');
    window.tabValue = dropdown.value;
    console.log('Initial selected value:', dropdown.value);
    
    dropdown.addEventListener('change', function () {
      const selectedValue = this.value;
      console.log('Changed selected value:', selectedValue);
    
      // Update window.tabValue and location hash
      window.tabValue = selectedValue;
      window.location.hash = `#${selectedValue}`;
    
      // Activate the appropriate tab
      if (selectedValue === "shipping-tab") {
        activateTab("shipping-tab");
      } else if (selectedValue === "return-tab") {
        activateTab("return-tab");
      } else if (selectedValue === "subscription-tab") {
        activateTab("subscription-tab");
      } else if (selectedValue === "privacy-tab") {
        activateTab("privacy-tab");
      } else {
        // Default to pickup-tab
        dropdown.value = "pickup-tab";
        window.tabValue = "pickup-tab";
        activateTab("pickup-tab");
        window.location.hash = "#pickup-tab";
      }
    });

    
  });
  
</script>
