<div class="profile profile--pb78">
  <div class="profile__container">
    {% comment %}
    <div class="profile__col-left">
      <div class="profile__info-block">
        <div class="profile__image-block">
          <img src="https://cdn.shopify.com/s/files/1/0723/0839/2168/files/person-img_2.png?v=1745996393" alt="" class="profile__profile-picture">
        </div>
        {% if customer %}
          <div class="profile__info-block-wrap">
            <span class="profile__info-desc profile__info-desc--name" style="color: black;">
              {{ customer.first_name }} {{ customer.last_name }}
            </span>
            <span class="profile__info-desc">
              {{ customer.phone }}
            </span>
            <span class="profile__info-desc">
              {{ customer.email }}
            </span>
          </div>
        {% endif %}
      </div>
      <div class="profile__menu-container">
        <ul class="profile__menu-list">
          <li class="profile__menu-item">
            <a href="/pages/profile">My Orders</a>
            </li>
          <!-- <li class="profile__menu-item">
            <a href="/pages/profile-subscription">My Subscriptions</a>
          </li> -->
        </ul>
        <ul class="profile__menu-list">
          <li class="profile__menu-item">
            <a href="/pages/profile-my-account">My Account</a>
          </li>
          <li class="profile__menu-item">
             <a href="/pages/my-wishlist">My Wishlist</a>
          </li>
        </ul>
        <ul class="profile__menu-list">
          <li class="profile__menu-item">
            <a href="/pages/profile-policies">policies</a>
          </li>
          <li class="profile__menu-item">
            <a href="#">Sign Out</a>
          </li>
        </ul>
      </div>
    </div> 
    {% endcomment %}

    <div class="profile__col-right">
      <div class="profile__order-heading-wrap">
        <h2 class="profile__order-heading">Policies</h2>
        <select class="profile__cat-dropdown-wrap sp" id="tab-category" name="dropdown-category">
          <option id="pickup-sp" value="pickup-tab">PICKUP</option>
          <option id="shipping-sp" value="shipping-tab">SHIPPING</option>
          <option id="return-sp" value="return-tab">RETURN</option>
          <option id="subscription-sp" value="subscription-tab">SUBSCRIPTION</option>
          <option id="privacy-sp" value="privacy-tab">PRIVACY</option>
        </select>
      </div>
      <div class="profile__order-container profile__order-container--pad0">
        <div class="profile__order-cat-wrap flex-start pc">
          <a href="#" id="pickup-tab" class="profile__order-cat-link profile__order-cat-link--active">pickup</a>
          <a href="#" id="shipping-tab" class="profile__order-cat-link">shipping</a>
          <a href="#" id="return-tab" class="profile__order-cat-link">return</a>
          <a href="#" id="subscription-tab" class="profile__order-cat-link">subscription</a>
          <a href="#" id="privacy-tab" class="profile__order-cat-link">privacy</a>
        </div>
          
        <!-- Pickup Section -->
        <div id="pickup-section" class="profile-policy__container" style="">
         <ol class="profile-policy__privacy-list">
            <li>
              <h3 class="profile-policy__privacy-item">
                <span class="profile-policy__privacy-item-no">01</span>
                In-Store Pickup Option
              </h3>
