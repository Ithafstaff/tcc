<p id="variant-sku">SKU: {{ product.variants.first.sku }}</p>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const skuDisplay = document.getElementById('variant-sku');
    const productData = {{ product | json }};

    function updateSkuById(variantId) {
      const matchedVariant = productData.variants.find(v => v.id == variantId);
      if (matchedVariant) {
        skuDisplay.textContent = matchedVariant.sku ? 'SKU: ' + matchedVariant.sku : 'SKU: N/A';

        // Update the hidden variant ID input if present
        const variantIdInput = document.querySelector('[name="id"]');
        if (variantIdInput) {
          variantIdInput.value = matchedVariant.id;
        }
      }
    }

    function getVariantFromUrl() {
      const params = new URLSearchParams(window.location.search);
      return params.get('variant');
    }

    // If variant is in URL, select it
    const variantFromUrl = getVariantFromUrl();
    if (variantFromUrl) {
      const radioToSelect = document.querySelector(`.custom-variant__inputs[value="${variantFromUrl}"]`);
      if (radioToSelect) {
        radioToSelect.checked = true;
        updateSkuById(variantFromUrl);
      }
    } else {
      // If not from URL, fall back to first checked input
      const initiallyChecked = document.querySelector('.custom-variant__inputs:checked');
      if (initiallyChecked) {
        updateSkuById(initiallyChecked.value);
      }
    }

    // Listen to changes
    document.querySelectorAll('.custom-variant__inputs').forEach(input => {
      input.addEventListener('change', function () {
        updateSkuById(this.value);
      });
    });
  });
</script>
