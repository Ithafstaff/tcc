<p id="variant-sku">SKU: {{ product.variants.first.sku }}</p>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function getSelectedVariantId() {
      const radio = document.querySelector('[name="id"]:checked');
      const select = document.querySelector('[name="id"] option:checked');
      return radio?.value || select?.value || null;
    }

    setInterval(() => {
      const currentId = getSelectedVariantId();
      console.log('Current selected variant ID:', currentId);
    }, 500);
  });
</script>
