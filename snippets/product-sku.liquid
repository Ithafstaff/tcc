<p id="variant-sku">SKU: {{ product.variants.first.sku }}</p>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const skuDisplay = document.getElementById('variant-sku');
    const productData = {{ product | json }};

    function updateSku() {
      // Get all selected option values (dropdown or radio)
      const selectedOptions = Array.from(document.querySelectorAll('[name^="options"]'))
        .filter(el => el.type === 'radio' ? el.checked : true)
        .map(el => el.value);

      const matchedVariant = productData.variants.find(v => {
        return v.options.every((opt, idx) => opt === selectedOptions[idx]);
      });

      if (matchedVariant) {
        skuDisplay.textContent = matchedVariant.sku ? 'SKU: ' + matchedVariant.sku : 'SKU: N/A';

        // Also update the hidden variant ID input if present
        const variantIdInput = document.querySelector('[name="id"]');
        if (variantIdInput) {
          variantIdInput.value = matchedVariant.id;
        }
      }
    }

    // Listen for changes on all variant selectors
    document.querySelectorAll('[name^="options"]').forEach(function (el) {
      el.addEventListener('change', updateSku);
    });

    // Initial load
    updateSku();
  });
</script>